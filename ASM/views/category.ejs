<%- include('header.ejs') %>
    <!-- =============================================== -->
    <%- include('aside.ejs') %>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Thêm mới danh mục
                </h1>
            </section>
            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="box">
                    <div class="box-body">

                        <form action="" method="get" class="form-inline" role="form">

                            <div class="form-group">
                                <label class="sr-only" for="">Tìm Kiếm</label>
                                <input class="form-control " name="search" id="" placeholder="Nhập mục cần tìm kiếm">
                            </div>



                            <button type="submit" class="btn btn-primary"><i class="fa fa-search"
                                    aria-hidden="true"></i></button>
                            <a href="/them-danh-muc" class="btn btn-success pull-right"><i class="fa fa-plus"></i> Thêm
                                mới</a>
                        </form>
                        <hr>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="text-center">STT</th>
                                    <th class="text-center">Name</th>
                                    <th class="text-center">Mô Tả</th>
                                    <th class="text-center">Trạng thái</th>
                                    <th class="text-center"></th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                <% data.map(function(item,index) { %>
                                    <tr> 
                                        <td scope="row" class="text-center"><%= index+1%></td>
                                        <td class="text-center"><%= item.name%></td>
                                        <td class="text-center"><%= item.description%></td>
                                        <td class="text-center"><%= item.status == 1 ? 'Tạm Ẩn' : 'Hiển Thị '%></td>
                                        <td class="text-right text-center">
                                            <a href="/sua-danh-muc/<%= item.id%>" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i> Sửa</a>
                                            <a href="/xoa-danh-muc/<%= item.id%>" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> Xóa</a>
                                        </td>
                                    </tr>
                                <% }) %>
`
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <%- include('footer.ejs') %>